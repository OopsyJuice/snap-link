{
    "manifest_version": 3,
    "name": "SnapLink",
    "description": "Instantly shorten your URLs",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:5001/"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }